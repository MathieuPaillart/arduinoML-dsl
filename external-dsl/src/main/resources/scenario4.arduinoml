application redButton

# Declaring bricks
sensor button: 9
actuator led: 12
actuator buzzer: 11

# Declaring states
noise {
    buzzer <= HIGH
    button is HIGH => led_on
}

led_on {
    led <= HIGH
    buzzer <= LOW
    button is HIGH => off

}
# -> for initial state
-> off {
    led <= LOW
    buzzer <= LOW
    button is HIGH => noise
}
